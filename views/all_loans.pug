doctype html
html
  head
    title Loans
    link(rel='stylesheet', href='/static/stylesheets/style.css')
  body
    nav
      ul
        li
          a(href='all_books') Books
        li
          a(href='all_patrons') Patrons
        li
          a(href='all_loans') Loans
    h1 Loans
    p
      a.button(href='loans/new') Create New Loan
    p
      | Filters 
      a(href='all_loans') All
      |  
      a(href='overdue_loans.html') Overdue
      |  
      a(href='checked_loans') Checked Out
    table
      thead
        tr
          th Book
          th Patron 
          th Loaned on
          th Return by 
          th Returned on
          th Action
      tbody
      each loan in loans
        tr
          td
            a(href='book_detail.html') #{loan.dataValues.book.dataValues.title}
          td
            a(href='patron_detail.html') #{loan.dataValues.patron.dataValues.first_name} #{loan.dataValues.patron.dataValues.last_name}
          td #{loan.dataValues.loaned_on}
          td #{loan.dataValues.return_by}
          -if(loan.dataValues.returned_on){
          td #{loan.dataValues.returned_on}
          td
          -}else{
          td
          td
            a.button(href=`/loans/${loan.dataValues.id}/return_book`) Return Book
          -}
