doctype html
html
  head
    title Patrons
    link(rel='stylesheet', href='/static/stylesheets/style.css')
  body
    nav
      ul
        li
          a(href='all_books') Books
        li
          a(href='all_patrons') Patrons
        li
          a(href='all_loans') Loans
    h1 Patrons
    p
      a.button(href='patrons/new') Create New Patron
    table
      thead
        tr
          th Name 
          th Address
          th Email
          th Library ID
          th Zip
      tbody
      each patron in patrons
        tr
          td
            a(href=`patrons/${patron.dataValues.id}/edit`) #{patron.dataValues.first_name} #{patron.dataValues.last_name}
          td #{patron.dataValues.address}
          td #{patron.dataValues.email}
          td #{patron.dataValues.library_id}
          td #{patron.dataValues.zip_code}
