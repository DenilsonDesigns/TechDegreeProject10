doctype html
html
  head
    title Books
    link(rel='stylesheet', href='/static/stylesheets/style.css')
  body
    nav
      ul
        li
          a(href='all_books') Books
        li
          a(href='all_patrons') Patrons
        li
          a(href='all_loans') Loans
    h1 Books
    p
      a.button(href='books/new') Create New Book
    p
      | Filters 
      a(href='all_books') All
      |  
      a(href='overdue_books') Overdue
      |  
      a(href='checked_books') Checked Out
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released
      tbody
      each book in books
        tr
          td
            a(href=`books/${book.dataValues.id}/edit`) #{book.dataValues.title}
          td #{book.dataValues.author}
          td #{book.dataValues.genre}
          td #{book.dataValues.first_published}
